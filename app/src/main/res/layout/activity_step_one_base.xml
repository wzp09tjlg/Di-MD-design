<?xml version="1.0" encoding="utf-8"?>
<com.wuzp.didi.md_design_analyse.widget.CoordinatorLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clc_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:zoomId="@+id/img">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed|exitUntilCollapsed">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_food"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="95.5dp"
        app:layout_behavior="com.wuzp.didi.md_design_analyse.view.stepOne.behavior.TitleBarBehavior">

        <RelativeLayout
            android:id="@+id/fl_business_header1"
            android:layout_width="match_parent"
            android:layout_height="95.5dp"
            android:background="@color/yellow_300"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_business_title_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/customer_business_name_test"
                android:textColor="@color/customer_color_33"
                android:textSize="18dp"
                tools:text="@string/customer_business_name_test" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_business_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/common_icon_back_normal" />

    </FrameLayout>
</com.wuzp.didi.md_design_analyse.widget.CoordinatorLayoutCompat>